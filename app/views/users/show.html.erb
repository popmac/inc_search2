<%= link_to 'Back', tools_path %>

<h3>投稿したアプリとレビュー</h3>

<% @reviews.each do |review| %>
<%= review.tool.name %><br>
<%= review.review %><%= link_to 'レビューの詳細', review_path(review) %><br>
<div id="user-reviews-like-button<%= review.id %>">
  <%= render partial: "likes/like", locals: { like: review.likes.find_by(user_id: current_user.id), review: review } %>
</div>
<% end %>
